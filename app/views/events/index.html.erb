<h1>Results </h1>

<% @events.each do |event| %>
  <a href="<%= event.event_url %>"><img src="<%= event.image_url %>" alt=""></a>  
  <% if current_user.events_attended.include?(event) %>
    <%= link_to 'Write a journal entry for this event', attendance_path(id: find_attendance(current_user.id, event.id)) %>
  <% else %>
    <%= link_to 'I attended this event', attendances_path(event_id: event.id), method: :post %>
  <% end %>
   <p><%= event.date.strftime("%a. %b %d %l:%M %p") %></p>
   <p><%= event.name %></p>
<% end %>

